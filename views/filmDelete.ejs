        <%- include('./partials/nav.ejs') %>
          <!-- Set up a form to put films. The id is taken in as a request, and sent to the films.js file in the routes folder, which calls the deleteFilm() function in m.films.dal.js. The function deletes the record in the database. Then the changes can be displayed in the list of films on films.ejs.  -->
        <div class="create content">
            <form action="/films/<%= locals.theId %>?_method=DELETE" method="POST">
            </br><h2><u>DELETE FILM ENTRY</u></h2></br>
                   <div class="form-group"><input type="text" id="<%= locals.theId %>" name="film" value="<%= locals.title %>" readonly>
                </label></div> </br></br>
                <button class="btn btn-primary">DELETE</button>
            </form>
        </div>
    </body>
    <!-- Adds the footer from foot.ejs: -->
    <%- include('./partials/foot.ejs') %>
</html>